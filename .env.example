# Application
NODE_ENV=development
PORT=3333
HOST=0.0.0.0
API_URL=http://localhost:3333

# Database
DATABASE_URL=postgresql://docker:docker@localhost:5432/mytasks

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-me-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-me-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Security
BCRYPT_COST=11
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_AUTH=10
RATE_LIMIT_TASKS=120
